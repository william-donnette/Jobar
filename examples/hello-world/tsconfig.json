{
	"extends": "@tsconfig/node16/tsconfig.json",
	"version": "4.4.2",
	"compilerOptions": {
		"declaration": true,
		"moduleResolution": "Node16",
		"declarationMap": true,
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"@src/*": ["./*"],
			"@activities": ["./activities"],
			"@activities/*": ["./activities/*"],
			"@tasks": ["./tasks"],
			"@tasks/*": ["./tasks/*"],
			"@workflows": ["./workflows"],
			"@workflows/*": ["./workflows/*"]
		}
	},
	"include": ["./src/**/*.ts"]
}
